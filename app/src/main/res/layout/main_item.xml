<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:background="@drawable/glass_morph">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/side_nav_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tittlerecy"
            android:text="Title"
            android:textStyle="bold"
            android:padding="6dp"
            android:textSize="25sp"
            android:textColor="@color/darkTextColor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionrecy"
            android:padding="6dp"
            android:text="selected options"
            android:layout_below="@+id/tittlerecy"
            android:textSize="25sp"
            android:textColor="@color/darkTextColor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pricerecy"
            android:padding="6dp"
            android:text="price"
            android:layout_below="@+id/optionrecy"
            android:textSize="25sp"
            android:textColor="@color/darkTextColor"/>

        <TextView
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_height="wrap_content"
            android:id="@+id/noterecy"
            android:text="note"
            android:layout_below="@+id/pricerecy"
            android:textSize="25sp"
            android:textColor="@color/darkTextColor"/>

        <TextView
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_height="wrap_content"
            android:id="@+id/datels"
            android:text="date"
            android:layout_below="@+id/noterecy"
            android:textSize="25sp"
            android:textColor="@color/darkTextColor"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>